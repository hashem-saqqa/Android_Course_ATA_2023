<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Section101.TabLayoutWithViewPager.ProductsCatMainActivity">

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/categoriesTl"
        app:tabIndicatorColor="#FF5722"
        app:tabSelectedTextColor="#FF5722"
        app:tabIndicatorHeight="2dp"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/categoriesTl"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/categoriesVp"
        android:layout_marginTop="3dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>